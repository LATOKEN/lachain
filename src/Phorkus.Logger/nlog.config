<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="logs/nlog-internal.log"
      internalLogLevel="Info">
  <variable name="logDirectory" value="${basedir}/logs"/>
  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file -->
    <target xsi:type="File"
            name="targetGeneralOutput"
            fileName="${logDirectory}/neo-sharp-general.log"
            layout="${date}|${pad:padding=5:inner=${level:uppercase=true}}|${message} ${exception}|${logger}|${all-event-properties}"
            archiveFileName="${logDirectory}/neo-sharp-general.{#####}.log"
            maxArchiveFiles="2"
            archiveAboveSize="10240000"
            archiveNumbering="Sequence"
            />
    <target xsi:type="ColoredConsole" 
            name="targetConsole"
            layout="${date}|${pad:padding=-5:inner=${level:uppercase=true}}|${pad:padding=-20:fixedLength=true:inner=${logger:shortName=true}}| ${message} ${exception} |${all-event-properties}"
            useDefaultRowHighlightingRules="false"
            encoding="utf-8"
    >
        <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
        <highlight-row condition="level == LogLevel.Info" foregroundColor="Magenta" />
        <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
        <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
        <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
  </targets>
  <!-- rules to map from logger name to target -->
  <rules>    
    <logger name="*" minlevel="Debug" writeTo="targetConsole" />
    <logger name="*" minlevel="Info" writeTo="targetGeneralOutput" />
  </rules>
</nlog>